{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",                              /* Root is the current directory. */
    "outDir": "./dist",                           /* Output folder for compiled files. */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": ["**/*.ts"],                        /* Include all TypeScript files in the root and subdirectories. */
  "exclude": ["node_modules", "dist"]            /* Exclude build output and dependencies. */
}